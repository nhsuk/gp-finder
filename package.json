{
  "name": "gp-finder",
  "version": "0.0.1",
  "description": "Web app to find your GP",
  "main": "server.js",
  "scripts": {
    "start": "node app.js",
    "lint": "eslint --ext .js,.json .",
    "test": "NODE_ENV=test mocha --recursive test",
    "build-css": "./css-build",
    "build-js": "webpack public/src/main.js -d public/dist/main.js",
    "istanbul": "NODE_ENV=test istanbul",
    "generate-coverage": "yarn run istanbul -- cover _mocha -- --recursive",
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "upload-coverage-coveralls": "cat ./coverage/lcov.info | coveralls",
    "watch-dev": "nodemon app.js | ./node_modules/.bin/bunyan & nodemon -e scss -x yarn run build-css -- compact",
    "watch-lint": "esw --watch .",
    "watch-test": "yarn run test -- --reporter min --watch",
    "git-hook": "yarn run lint && yarn run generate-coverage && yarn run check-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/gp-finder.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nhsuk/gp-finder/issues"
  },
  "homepage": "https://github.com/nhsuk/gp-finder#readme",
  "dependencies": {
    "body-parser": "^1.16.1",
    "bunyan": "^1.8.8",
    "cheerio": "^0.22.0",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "mongodb": "^2.2.24",
    "node-sass": "^4.5.0",
    "normalize.css": "^5.0.0",
    "nunjucks": "^2.5.2",
    "require-environment-variables": "^1.1.2",
    "verror": "^1.3.6"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.12.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^2.0.0",
    "eslint-plugin-mocha": "^4.3.0",
    "eslint-plugin-react": "^6.0.0",
    "eslint-watch": "^2.1.11",
    "istanbul": "^0.4.3",
    "mocha": "^3.0.2",
    "nodemon": "^1.11.0",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1"
  }
}
