{
  "name": "gp-finder",
  "version": "0.0.1",
  "description": "Web app to find your GP",
  "main": "server.js",
  "scripts": {
    "build-css": "./css-build",
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "check-unit-coverage": "istanbul check-coverage --config .istanbul.unit.yml",
    "coverage-travis": "yarn generate-coverage && yarn check-coverage && yarn upload-coverage",
    "generate-coverage": "yarn istanbul -- cover _mocha -- --recursive",
    "generate-unit-coverage": "yarn istanbul -- cover _mocha -- --recursive test/unit",
    "git-hook": "yarn lint && yarn generate-unit-coverage && yarn check-unit-coverage",
    "istanbul": "NODE_ENV=test istanbul",
    "lint": "eslint --ext .js,.json .",
    "precommit": "yarn git-hook",
    "prepush": "yarn git-hook && yarn snyk -- test",
    "postrewrite": "yarn git-hook",
    "snyk-travis": "yarn snyk -- monitor --org=nhsuk",
    "start": "node app.js",
    "test": "NODE_ENV=test mocha --recursive test",
    "test-unit": "NODE_ENV=test mocha --recursive test/unit",
    "travis": "yarn lint && yarn coverage-travis && yarn snyk-travis",
    "upload-coverage": "cat ./coverage/lcov.info | coveralls",
    "watch-dev": "nodemon app.js | ./node_modules/bunyan/bin/bunyan & nodemon -e scss -x yarn build-css -- compact",
    "watch-lint": "esw --watch .",
    "watch-test": "yarn test -- --reporter min --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/gp-finder.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nhsuk/gp-finder/issues"
  },
  "homepage": "https://github.com/nhsuk/gp-finder#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "elasticsearch": "^13.2.0",
    "express": "^4.15.2",
    "helmet": "^3.6.1",
    "husky": "^0.14.2",
    "nhsuk-bunyan-logger": "^1.4.0",
    "node-sass": "^4.5.3",
    "normalize.css": "^7.0.0",
    "nunjucks": "^3.0.1",
    "require-environment-variables": "^1.1.2",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "cheerio": "^1.0.0-rc.2",
    "coveralls": "^2.13.1",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-nhsuk": "^0.3.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.10.1",
    "eslint-watch": "^3.1.1",
    "istanbul": "^0.4.3",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "snyk": "^1.36.2"
  }
}
